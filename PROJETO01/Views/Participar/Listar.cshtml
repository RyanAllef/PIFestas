@model List<PROJETO01.Modelos.Participantes>
<br />
<br />

<div class="container-fluid bg-light w-100 p-3" style="border:solid">
    <br />
    <h3>Lista de eventos que você está participando:</h3>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>ID do Convite</th>
                <th>Participante</th>
                <th>Festa</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ConviteID</td>
                    <td>@item.Usuario.Nome</td>
                    <td>@item.NomeFesta.Nome</td>
                </tr>
            }
        </tbody>
    </table>
</div>