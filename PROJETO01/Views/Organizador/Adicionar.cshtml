    
@model PROJETO01.Modelos.Organizador
    

<br />
<br />
<div class="container-fluid bg-light" style="border:solid">
            
        <br />

        <h3>Preencha os dados abaixo:</h3>

        <br />
   
    <form asp-controller="Organizador" asp-action="AdicionarConfirmacao" method="post">

    <div class="mb-3">
        <label for="OrganizadorID" class="form-label" style="color: black"> ID do Organizador:</label>
        <input asp-for="OrganizadorID" type="number" class="form-control" placeholder="Insira seu ID" />
    </div>
    <div class="mb-3">
        <label for="Nome" class="form-label" style="color: black">Nome:</label>
        <input asp-for="Nome" type="text" class="form-control" placeholder="Insira seu Nome" />
    </div>
    <div class="mb-3">
        <label for="CPF" class="form-label" style="color: black">CPF:</label>
        <input asp-for="CPF" type="text" class="form-control" placeholder="Insira seu CPF" />
    </div>
    <div class="mb-3">
        <label for="Telefone" class="form-label" style="color: black">Telefone:</label>
        <input asp-for="Telefone" type="tel" class="form-control" placeholder="Insira o numero de celular com DDD" />
    </div>



    <hr />

    <a href="#" class="btn btn-secondary" onclick="javascript:history.back()">
        Voltar
    </a>

    <button type="submit" class="btn btn-success float-right">
        Salvar
    </button>
    <br />
    </form>
    <br />
</div>